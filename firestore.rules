rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- 1. CORE FUNCTIONS ---
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isRootAdmin() {
      return isAuthenticated() && request.auth.token.email == 'admin@geges.com'; // Hardcoded Emergency Key
    }

    function isSuperAdmin() {
      return isRootAdmin() || (
        isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin'
      );
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- 2. GOD MODE (SUPER ADMIN) ---
    match /{document=**} {
      allow read, write: if isSuperAdmin();
    }

    // --- 3. PUBLIC CATALOG (READ-ONLY) ---
    match /barbershops/{document=**} {
      allow read: if true;
      allow write: if false; // Strict
    }
    match /services/{document=**} {
      allow read: if true;
      allow write: if false; 
    }
    match /barbermen/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /promo_banners/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    match /app_ratings/{document=**} {
      allow read: if true;
      allow create: if isAuthenticated(); // User boleh review
      allow update, delete: if false; // Review kekal
    }

    // --- 4. USER DATA (PRIVATE) ---
    match /users/{userId} {
      allow read: if isOwner(userId);
      // Cegah User biasa menaikkan pangkatnya sendiri jadi 'super_admin'
      allow write: if isOwner(userId) && 
        (!request.resource.data.keys().hasAny(['role']) || request.resource.data.role == resource.data.role);
    }

    // --- 5. TRANSACTIONAL DATA ---
    
    // Antrean / Booking
    match /queues/{queueId} {
      allow read: if isAuthenticated(); // Perlu baca antrean publik untuk cek slot penuh
      allow create: if isAuthenticated();
      // Update: User hanya boleh ubah antrean sendiri (misal: status -> cancellation_requested)
      // Menggunakan field 'customer_id' sesuai kode aplikasi
      allow update: if isAuthenticated() && (
        resource.data.customer_id == request.auth.uid || 
        request.resource.data.customer_id == request.auth.uid
      );
      // Delete: DILARANG (Gunakan Soft Delete / Cancelled status)
      allow delete: if false; 
    }

    // Pendaftaran Tenant
    match /tenants/{tenantId} {
      allow create: if isAuthenticated();
      // Read/Update: Hanya pemilik pendaftaran (owner_uid)
      allow read, update: if isAuthenticated() && resource.data.owner_uid == request.auth.uid;
    }

    // Notifikasi
    match /notifications/{notifId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      // Write: Biasanya via Backend/Cloud Functions, tapi Client-side trigger diizinkan sementara
      allow write: if isAuthenticated();
    }
    
    // Login Audit
    match /login_audit/{auditId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false;
    }
  }
}
